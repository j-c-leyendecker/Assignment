#include <iostream>
using namespace std;

int countPairs(int* arr, int n, int k) {
    int count = 0;
    for (int i = 0; i < n; i++) {
        for (int j = i + 1; j < n; j++) {
            if (arr[i] - arr[j] == k || arr[j] - arr[i] == k) {
                count++;
            }
        }
    }
    return count;
}

int main() {
    int n, k;
    cout << "Enter size of array: ";
    cin >> n;

    cout << "Enter value of k: ";
    cin >> k;

  
    int* arr = new int[n];

    cout << "Enter " << n << " elements: ";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    int result = countPairs(arr, n, k);
    cout << "Count of pairs = " << result << endl;

    delete[] arr; 
    return 0;
}
