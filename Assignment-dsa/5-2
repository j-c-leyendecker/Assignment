#include <iostream>
using namespace std;

struct Node {
    int data;
    Node *next;
};

Node *head = NULL;

void insertEnd(int x) {
    Node *t = new Node;
    t->data = x;
    t->next = NULL;

    if (head == NULL) {
        head = t;
        return;
    }
    Node *p = head;
    while (p->next != NULL)
        p = p->next;

    p->next = t;
}

int deleteAll(int key) {
    int count = 0;

    while (head != NULL && head->data == key) {
        Node *t = head;
        head = head->next;
        delete t;
        count++;
    }

    Node *p = head;

    while (p != NULL && p->next != NULL) {
        if (p->next->data == key) {
            Node *t = p->next;
            p->next = t->next;
            delete t;
            count++;
        } else {
            p = p->next;
        }
    }
    return count;
}

void display() {
    Node *p = head;
    while (p != NULL) {
        cout << p->data << " ";
        p = p->next;
    }
}

int main() {
    insertEnd(1);
    insertEnd(2);
    insertEnd(1);
    insertEnd(3);
    insertEnd(1);
    insertEnd(2);
    insertEnd(1);

    int key = 1;

    int c = deleteAll(key);
    cout << "Count: " << c << "\nUpdated Linked List: ";
    display();
}
