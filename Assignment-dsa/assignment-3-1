#include <iostream>
using namespace std;

#define MAX 5   // maximum size of stack

class Stack {
    int arr[MAX];
    int top;
public:
    Stack() {
        top = -1;
    }
    bool isEmpty() {
        return top == -1;
    }
    bool isFull() {
        return top == MAX - 1;
    }
    void push(int x) {
        if (isFull()) {
            cout << "Stack Overflow! Cannot push " << x << endl;
        } else {
            arr[++top] = x;
            cout << x << " pushed into stack.\n";
        }
    }
    void pop() {
        if (isEmpty()) {
            cout << "Stack Underflow! Cannot pop.\n";
        } else {
            cout << arr[top--] << " popped from stack.\n";
        }
    }
    void peek() {
        if (isEmpty()) {
            cout << "Stack is empty. Nothing to peek.\n";
        } else {
            cout << "Top element is: " << arr[top] << endl;
        }
    }
    void display() {
        if (isEmpty()) {
            cout << "Stack is empty.\n";
        } else {
            cout << "Stack elements (top to bottom): ";
            for (int i = top; i >= 0; i--) {
                cout << arr[i] << " ";
            }
            cout << endl;
        }
    }
};





int main() {
    Stack st;
  int choice;
int =value;
    do {
        cout << "\n--- Stack Menu ---\n";
        cout << "1. Push\n";
        cout << "2. Pop\n";
        cout << "3. isEmpty\n";
        cout << "4. isFull\n";
        cout << "5. Display\n";
        cout << "6. Peek\n";
        cout << "0. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;



        switch (choice) {
            case 1:
                cout << "Enter value to push: ";
                cin >> value;
                st.push(value);
                break;
            case 2:
                st.pop();
                break;
            case 3:
                cout << (st.isEmpty() ? "Stack is Empty.\n" : "Stack is not Empty.\n");
                break;
            case 4:
                cout << (st.isFull() ? "Stack is Full.\n" : "Stack is not Full.\n");
                break;
            case 5:
                st.display();
                break;
            case 6:
                st.peek();
                break;
            case 0:
                cout << "Exiting program.\n";
                break;
            default:
                cout << "Invalid choice! Try again.\n";
        }
    } while (choice != 0);
    return 0;
}
